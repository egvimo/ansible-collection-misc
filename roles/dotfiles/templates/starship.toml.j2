{% else %}
shell = ["bash", "--noprofile", "--norc"]
{% endif %}
format = "by [$output]($style) "
style = "bright-yellow"
disabled = {{ 'false' if (dotfiles_starship_git_email is defined and dotfiles_starship_git_email) else 'true' }}

